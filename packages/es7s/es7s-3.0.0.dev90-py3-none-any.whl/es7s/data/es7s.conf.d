[general]
syntax-version = 1.10
theme-color = red

[monitor]
debug = no

[monitor.battery]
enable = yes
debug = no
separator-left = none
separator-right = none

[monitor.cpu-load]
enable = yes
debug = no
separator-left = space
separator-right = space2
#separator-right = line-pad-right

[monitor.cpu-load-avg]
enable = yes
debug = no
separator-left = space
separator-right = space2
#separator-right = line-pad-right

[monitor.cpu-freq]
enable = yes
debug = no
separator-left = space
separator-right = space2
#separator-right = line-pad-right

[monitor.docker]
enable = yes
debug = no
separator-left = space
separator-right = space2
#separator-right = line-pad-right

[monitor.system-date]
enable = yes
debug = no
separator-left = space
separator-right = space2
#separator-right = line-pad-right
display-year = no

[monitor.system-time]
enable = yes
debug = no
separator-left = space
separator-right = space2
#separator-right = line-pad-right
display-seconds = no

[monitor.weather]
enable = yes
debug = no
separator-left = space
separator-right = space2
#separator-right = line-pad-right
location = MSK
weather-icon-max-width = 2
weather-icon-set-id = 2
wind-speed-warn-threshold = 10.0
